    <!-- CRITICAL: Style tag MUST be first, before title -->
    <style id="theme-prevent-flash">
        /* Ultra-aggressive: Set background immediately, no transitions */
        html {
            background-color: #ffffff !important;
            color: #212529 !important;
            transition: none !important;
            margin: 0 !important;
            padding: 0 !important;
        }
        html[data-theme="dark"] {
            background-color: #1a1a1a !important;
            color: #f8f9fa !important;
        }
        body {
            background-color: #ffffff !important;
            color: #212529 !important;
            transition: none !important;
            margin: 0 !important;
            padding: 0 !important;
        }
        html[data-theme="dark"] body,
        body[data-theme="dark"] {
            background-color: #1a1a1a !important;
            color: #f8f9fa !important;
        }
        /* Prevent any other styles from overriding */
        * {
            transition: none !important;
        }
    </style>
    <!-- Blocking script - MUST run before any rendering -->
    <script>
        (function() {
            try {
                var theme = localStorage.getItem('theme') || 'light';
                var bgColor = theme === 'dark' ? '#1a1a1a' : '#ffffff';
                var textColor = theme === 'dark' ? '#f8f9fa' : '#212529';
                
                // Set on html element immediately - blocks rendering
                var html = document.documentElement;
                html.setAttribute('data-theme', theme);
                html.setAttribute('style', 'background-color: ' + bgColor + ' !important; color: ' + textColor + ' !important; transition: none !important;');
                
                // Set on body immediately if it exists
                if (document.body) {
                    document.body.setAttribute('data-theme', theme);
                    document.body.setAttribute('style', 'background-color: ' + bgColor + ' !important; color: ' + textColor + ' !important; transition: none !important;');
                } else {
                    // If body doesn't exist yet, use MutationObserver
                    var observer = new MutationObserver(function(mutations) {
                        if (document.body) {
                            document.body.setAttribute('data-theme', theme);
                            document.body.setAttribute('style', 'background-color: ' + bgColor + ' !important; color: ' + textColor + ' !important; transition: none !important;');
                            observer.disconnect();
                        }
                    });
                    observer.observe(document.documentElement, { childList: true, subtree: true });
                }
            } catch(e) {}
        })();
    </script>
